{%- import "imports/selects.html.jinja" as selects %}
{%- import "imports/buttons.html.jinja" as buttons -%}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ScreamRouter</title>
    <link rel="stylesheet" href="{{url_for('site_css')}}">
    <link rel="stylesheet" href="https://unpkg.com/normalize.css/normalize.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Orbitron:wght@400..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="manifest" href="/site/js/manifest.json">
    <script src="https://unpkg.com/lodash"></script>
    <script src="https://unpkg.com/butterchurn"></script>
    <script src="https://unpkg.com/butterchurn-presets"></script>
    <script src="https://unpkg.com/butterchurn-presets/lib/butterchurnPresetsExtra.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lamejs@1.2.0/lame.min.js"></script>
    <script type="module" src="site/js/main.js"></script>
</head>
<body onmousemove="onOptionDragMove(event)" onmouseup="onOptionDragEnd(event)"
      ontouchmove="onOptionDragTouchMove(event)" ontouchend="onOptionDragEnd(event)">
    <canvas id="backgroundCanvas"></canvas>
    <div id="enable_disable">
        <div id="randomcontainer4" class="title">
            <div class="blur">
                ScreamRouter
                <audio id="audio" preload="metadata" controls style="display: none;"></audio>
                <audio id="audio_visualizer" preload="metadata" controls style="display: none;"></audio>
            </div>
        </div>
        <div id="reload">
            {%- import "index_body.html.jinja" as index_body %}
            {{ index_body.main_body(sources, sinks, routes) }}
        </div>
        <div id="randomcontainer5">
            <div id="mainWrapper" class="section">
                <div class="blur">
                    <div id="presetControls">
                        <div>Preset: <select id="presetSelect" onchange="presetSelectChange(event)"></select></div>
                        <div>
                            Cycle:
                            <input type="checkbox" id="presetCycle" onchange="presetCycleChange(event)" checked>
                            <input type="number" id="presetCycleLength" step="1" value="15" min="1" onchange="presetCycleLengthChange(event)">
                        </div>
                        <div>Random: <input type="checkbox" id="presetRandom" onchange="presetRandom_change(event)" checked></div>
                    </div>
                    <canvas id="canvas" width="3840" height="2160" onclick="canvasClick()" tabindex="0" onkeydown="canvasOnKeyDown(event)"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div id="shadow" onclick="dialogCancel()"></div>
    <div id="dialog"></div>
</body>
</html>
