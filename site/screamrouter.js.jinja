function hightlight_active_routes() {
    var routes = [... document.querySelectorAll('span[data-type="RouteDescription"]')];
    var associated_sinks = [];
    var associated_sources = [];
    if (selected_sink)
        associated_sinks = get_associated_sinks();
    if (selected_source)
        associated_sources = get_associated_sources();
    for (route in routes) {
        var r1 = 0;
        var g1 = 0;
        var b1 = 0;
        var r2 = 0;
        var g2 = 0;
        var b2 = 0;
        var selected = false;
        if (routes[route] == selected_route) { // Green highlight
            selected = true;
        }
        if (selected_sink && (routes[route].dataset["sink"] == selected_sink.dataset["name"] || associated_sinks.indexOf(routes[route].dataset["sink"]) >= 0)) {
            if (selected_source && associated_sources.indexOf(routes[route].dataset["source"]) > -1) { // If both source and sink higlights then do blue to red
                r1 = 192;
                g1 = 192;
                b1 = 256;
                r2 = 192;
                g2 = 128;
                b2 = 128;
                if (selected) { // Tint it green if highlighted
                    g1 += 32;
                    g2 += 32;
                }
            } else { // If it's a sink with no source
                if (selected) { // If sink and selected do green to red
                    r1 = 128;
                    g1 = 192;
                    b1 = 128;
                    r2 = 192;
                    g2 = 128;
                    b2 = 128;
                } else { // If just sink do just red
                    r1 = 192;
                    g1 = 128;
                    b1 = 128;
                }
            }
        } else if (selected_source && associated_sources.indexOf(routes[route].dataset["source"]) > -1) { // If it's a source with no sink do blue
            r1 = 96;
            g1 = 128;
            b1 = 192;
            if (selected) { // If it's a selected source with no sink do blue to green
                r2 = 128;
                g2 = 192;
                b2 = 128;
            }
         }
        if (selected && !r1 && !b1 && !g1) { // If selected and not source or sink highlighted make it green
            r1 = 128;
            g1 = 192;
            b1 = 128;
        }
        if (!r1 && !b1 && !g1) { // No color
           routes[route].style.backgroundColor  = "";
           routes[route].style.background = "";
        } else if (!r2 && !b2 && !g2) { // One color
           routes[route].style.background = "";
           routes[route].style.backgroundColor  = "rgb(" + r1 + "," + g1 + "," + b1 +")";
        } else { // Two colors
            routes[route].style.backgroundColor  = "";
            routes[route].style.background  = "linear-gradient(90deg, rgb(" + r1 + "," + g1 + "," + b1 +"), rgb(" + r2 + "," + g2 + "," + b2 + "))";
        }
    }
}

