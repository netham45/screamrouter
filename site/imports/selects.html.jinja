{% macro option(value, label, class="", data="{}", checked=False, alt="", shortalt="") %}
{%- if (shortalt == "") %}
{%- set shortalt = alt %}
{%- endif %}
                    <SPAN TABINDEX="0" ALT="{{alt}}" TITLE="{{alt}}" VALUE="{{value}}" CLASS="{{class}}" ONCLICK="option_onclick(event)" ONKEYPRESS="keypress_handler(event)" {% for name, datum in data %}DATA-{{name}}="{{datum}}" {% endfor %}DATA-TYPE="{{data.__class__.__name__}}" {{"SELECTED" if checked}}><SPAN TABINDEX="0" ALT="{{shortalt}} Equalizer" TITLE="{{shortalt}} Equalizer" CLASS="button-icon" ONCLICK="equalizer_icon_onclick(event)">🎚️</SPAN><SPAN TABINDEX="0" ALT="{{shortalt}} Settings" TITLE="{{shortalt}} Settings" CLASS="button-icon" ONCLICK="update_icon_onclick(event)">⚙️</SPAN><SPAN TABINDEX="0" ALT="{{"Disable " if data["enabled"] else "Enable "}}{{shortalt}}" TITLE="{{"Disable " if data["enabled"] else "Enable "}}{{shortalt}}" CLASS="button-icon" ONCLICK="volume_icon_onclick(event)">{{ "🔊" if data["enabled"] else "🔇"}}</SPAN><SPAN TABINDEX="0" ALT="Remove {{shortalt}}" TITLE="Remove {{shortalt}}" CLASS="button-icon" ONCLICK="remove_icon_onclick(event)">🗑️</SPAN>{% if (data.__class__.__name__ == "SinkDescription" and not data.is_group) %}<SPAN TABINDEX="0" ALT="Listen to {{shortalt}}" TITLE="Listen to {{shortalt}}" CLASS="button-icon" ONCLICK="listen_icon_onclick(event)">📻</SPAN><SPAN TABINDEX="0" ALT="Visualize {{shortalt}}" TITLE="Visualize {{shortalt}}" CLASS="button-icon" ONCLICK="visualizer_icon_onclick(event)">✨</SPAN>{% endif %}{% if (data.vnc_ip and data.vnc_port) %}<SPAN TABINDEX="0" ALT="VNC {{shortalt}}" TITLE="VNC {{shortalt}}" CLASS="button-icon" ONCLICK="vnc_icon_onclick(event)">🖥️</SPAN>{% endif %}{{label}}</SPAN>
{%- endmacro %}

{% macro make_multiple_options(options, data="{}") %}
    {%- for _option in options %}
        {{- option(_option["value"], _option["label"], _option["class"], _option["data"], _option["checked"], _option["alt"], _option["shortalt"]) }}
    {%- endfor %}
{%- endmacro %}
