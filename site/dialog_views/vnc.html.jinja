<html>
    <head>
        <title>VNC Viewer</title>
        <script>
            function vnc_onload() {
                let interval = setInterval(
                    function() {
                        document.getElementById("vnc-iframe").contentWindow.document.getElementById("noVNC_control_bar_anchor").style.left="100000px";
                        document.getElementById("vnc-iframe").contentWindow.document.getElementById("noVNC_status").style.left="100000px";
                        clearInterval(interval);
                    }, 10);
            }
        </script>
    </head>
    <body style="margin: 0px; padding: 0px; border: 0px; overflow: hidden;">
        <div>
            <iframe onload="vnc_onload()" width="100%" height="100%" id="vnc-iframe" src="/site/noVNC/vnc.html?autoconnect=true&resize=remote&port={{port}}"></iframe>
        </div>
    <body>
</html>