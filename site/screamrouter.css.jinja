DIV#dialog {
    padding-top: 20px;
    padding-bottom: 20px;
    position: absolute;
    width: 33%;
    min-width: 400px;
    height: auto;
    top: 12.5%;
    margin-left: -16.5%;
    background: linear-gradient(-45deg, rgba(0,10,0,.15), rgba(0,200,0,.4));
    border-radius: 30px;
    display: none;
    backdrop-filter: blur(5px);
    font-family: "Courier";
    font-weight: 1000;
    text-shadow: 0 0 20px #fff, 0 0 30px #AA7777, 0 0 40px #AA7777, 0 0 50px #AA7777, 0 0 60px #AA7777, 0 0 70px #AA7777, 0 0 80px #AA7777;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
    width: 50%;
    max-width: 650px;
}

DIV.title {
    font-family: "Courier";
    font-weight: 1000;
    font-size: 48pt;
    text-shadow: 0 0 20px #fff, 0 0 30px #AA7777, 0 0 40px #AA7777, 0 0 50px #AA7777, 0 0 60px #AA7777, 0 0 70px #AA7777, 0 0 80px #AA7777;
    text-align: center;
    padding-top: 10px;
    padding-bottom: 10px;
    width: 100%;
    overflow: hidden;
    border-collapse: collapse;
    background-color: rgba(00,120,00,.2);
    border-radius: 25px;
    background-size: 60vmin 60vmin;
    display: inline-block;
    border-collapse: collapse;
}

DIV.section {
    overflow: hidden;
    border-collapse: collapse;
    background-color: rgba(00,120,00,.2);
    border-radius: 25px;
    background-size: 60vmin 60vmin;
    width: 33%;
    border-collapse: collapse;
    top: 0px;
    position: relative;
    display: inline-block;
}

DIV.section-name {
    font-family: "Courier";
    font-weight: 1000;
    font-size: 24pt;

    text-shadow: 0 0 20px #fff, 0 0 30px #AA7777, 0 0 40px #AA7777, 0 0 50px #AA7777, 0 0 60px #AA7777, 0 0 70px #AA7777, 0 0 80px #AA7777;
    text-align: center;
}

DIV.section INPUT[TYPE="range"] {
