DIV#dialog {
    padding-top: 20px;
    padding-bottom: 20px;
    position: absolute;
    width: 33%;
    min-width: 400px;
    height: auto;
    top: 12.5%;
    margin-left: -16.5%;
    background: linear-gradient(-45deg, rgba(0,10,0,.35), rgba(0,200,0,.7));
    border-radius: 30px;
    display: none;
    backdrop-filter: blur(5px);
    font-family: "Courier";
    font-weight: 1000;
    text-shadow: 0 0 20px #fff, 0 0 30px #AA7777, 0 0 40px #AA7777, 0 0 50px #AA7777, 0 0 60px #AA7777, 0 0 70px #AA7777, 0 0 80px #AA7777;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
    width: 50%;
    max-width: 650px;
}

DIV.title {
    font-family: "Courier";
    font-weight: 1000;
    font-size: 48pt;
    text-shadow: 0 0 20px #fff, 0 0 30px #AA7777, 0 0 40px #AA7777, 0 0 50px #AA7777, 0 0 60px #AA7777, 0 0 70px #AA7777, 0 0 80px #AA7777;
    text-align: center;
    padding-top: 10px;
    padding-bottom: 10px;
    width: 100%;
    overflow: hidden;
    border-collapse: collapse;
    background-color: #004400;
    border-radius: 25px;
    background-size: 60vmin 60vmin;
    display: inline-block;
    border-collapse: collapse;
}

DIV.section {
    overflow: hidden;
    border-collapse: collapse;
    background-color: #004400;
    border-radius: 25px;
    background-size: 60vmin 60vmin;
    width: 33%;
    border-collapse: collapse;
    top: 0px;
    position: relative;
    display: inline-block;
}

DIV.section-name {
    font-family: "Courier";
    font-weight: 1000;
    font-size: 24pt;

    text-shadow: 0 0 20px #fff, 0 0 30px #AA7777, 0 0 40px #AA7777, 0 0 50px #AA7777, 0 0 60px #AA7777, 0 0 70px #AA7777, 0 0 80px #AA7777;
    text-align: center;
}

DIV.section INPUT[TYPE="range"] {
    width: 98%;
    display: inline-block;
}

DIV.section-buttons BUTTON {
    font-size: 12pt;
}

DIV.section-buttons {
    text-align: center;
}

SELECT.main-select {
    width: 101%;
    margin-left: -1%;
    background:none;
    width: 101%;
    background-image: linear-gradient(rgba(60,221,90,.75),rgba(153,153,255,.75));
    overflow: hidden;
    padding-left: 2%;
    font-size: 1.25vw;
    color: #FFFFFF;
    border: none;
    outline: none;
    padding-bottom: 5px;
}

DIV.select-container {
}

select[multiple] option:checked {
  background-image: linear-gradient(rgba(140,190,140,.75),rgba(0,140,0,.75),rgba(140,190,140,.75));
}

select[multiple]:focus option:checked {
  background-image: linear-gradient(rgba(220,255,220,.75),rgba(0,192,0,.75),rgba(255,255,255,.75));
}

option.option-disabled {
    background-color: rgba(55, 55, 55, .5);
    color: #880000;
}

option:active, option:focus, option:hover, option:checked:after {
    outline: none;
}


HTML, BODY {
    height: 99%;
    background-color: #000100;
    font-family: "Arial";
    user-select: none; /* Standard */
    overflow: auto;
    text-align: center;
}


