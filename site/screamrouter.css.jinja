}

DIV#dialog LABEL {
    float: left;
}

DIV#dialog INPUT[TYPE="text"], DIV#dialog SELECT {
    float: right;
    display: block;
}

DIV#dialog INPUT[TYPE="text"] {
    width: 50%;
}

