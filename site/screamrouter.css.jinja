@media only screen and (max-width: 825px) {
    DIV.section {
        width: 100%;
    }
    BUTTON {
        padding-top: 5px;
        padding-bottom: 5px;
    }
    SELECT.main-select {
        font-size: inherit;
        position: relative;
    }

    DIV#dialog {
        position: absolute;
        top: 0%;
        left: 0px;
        padding-top: 0px;
        padding-left: 0px;
        padding-right: 0px;
        margin-left: 0px;
        width: 100%;
        max-width: 100%;

    }
    DIV.title {
        font-family: "Courier";
        font-weight: 1000;
        font-size: 7.8vw;
    }
  }
