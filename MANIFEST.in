# Documentation and configuration
include README.md
include LICENSE
include COPYING
include requirements.txt
include uvicorn_log_config.yaml
include setup.py
include pyproject.toml

# Python package
recursive-include screamrouter *.py

# Web assets - include everything in screamrouter/site
graft screamrouter/site

# Include uvicorn log config in screamrouter package
include screamrouter/uvicorn_log_config.yaml

# Also include root site and uvicorn config for sdist
graft site
include uvicorn_log_config.yaml

# React source files for building from sdist
graft screamrouter-react
prune screamrouter-react/node_modules

# Images
recursive-include images *.png *.jpg

graft src/

# C++ dependency sources (required for building from sdist)
graft src/audio_engine/deps

# Build system
recursive-include build_system *.py *.yaml

# Type stubs
include screamrouter_audio_engine.pyi

# Exclude development files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so